<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/topbar_orderdetail"
        android:background="@color/colorTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="任务详情"
            android:textStyle="bold"

            android:layout_gravity="center"
            android:textSize="25dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        android:scrollbars="vertical"
        android:layout_below="@id/topbar_orderdetail"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativelaout_1"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_corner"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textview_note"
                            android:textColor="@color/colorRed"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="标题"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/detail_orderTitle"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/detail_userName"
                            android:layout_alignLeft="@id/detail_userName"
                            android:textSize="20sp"
                            android:hint="任务标题"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="描述"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/detail_userName"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:singleLine="true"
                            android:textSize="20sp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/detail_userAvator"
                            android:hint="任务详情"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="赏金"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2.5"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:src="@drawable/ico_rmb"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/detail_money"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textSize="20sp"
                                android:textColor="@color/colorRed"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="目的地"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/detail_distinct"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/detail_userName"
                            android:layout_alignLeft="@id/detail_userName"
                            android:singleLine="true"
                            android:textSize="20sp"
                            android:hint="行政区"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="到账时间"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/textview_sendmoney_time"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/detail_userName"
                            android:layout_alignLeft="@id/detail_userName"
                            android:textSize="20sp"
                            android:hint="发布方尚未确认完成"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>



            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/button_start_message"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="聊天"
                android:textStyle="bold"
                app:bootstrapBrand="warning"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="true"
                app:roundedCorners="true"
                />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/button_see_more"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="再逛逛"
                android:textStyle="bold"
                app:bootstrapBrand="warning"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>




